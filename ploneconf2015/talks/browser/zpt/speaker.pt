<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>

<div metal:fill-slot="content-core">
<section>
  <div tal:condition="view/image" class="speaker-avatar">
    <img src="speaker image" tal:attributes="src view/image">
  </div>

  <p tal:content="structure view/summary"> Speaker Email </p>

  <ul class="list-inline">
    <li tal:define="twitter python:view.twitter" tal:condition="twitter">
      <span class="icon icon-twitter"></span>
      <a href="twitter link" tal:attributes="href string:https://twitter.com/$twitter">
        <span tal:content="twitter"> Speaker Twitter Account </span>
      </a>
    </li>
    <li tal:condition="view/git">
      <span class="icon icon-github"></span>
      <a href="git link" tal:attributes="href python: 'https://github.com/' + view.git">
        <span tal:content="view/git">Speaker GitHub Account</span>
      </a>
    </li>
  </ul>

<section>

</div>
</body>
</html>
